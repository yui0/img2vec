<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Img2Vec: Convert Image to Vector (SVG)</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
        }
        .container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .options {
            flex: 1;
            min-width: 300px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .preview {
            flex: 2;
            min-width: 300px;
        }
        canvas, svg {
            max-width: 100%;
            border: 1px solid #ccc;
        }
        .option-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
        }
        input[type="number"], input[type="text"] {
            width: 100%;
            padding: 5px;
            margin-bottom: 10px;
        }
        button {
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
        #status {
            margin-top: 10px;
            color: #333;
        }
    </style>
</head>
<body>
    <h1>Img2Vec: Convert Image to Vector (SVG)</h1>
    <div class="container">
        <div class="options">
            <h2>Options</h2>
            <div class="option-group">
                <label for="imageInput">Select Image:</label>
                <input type="file" id="imageInput" accept="image/*">
            </div>
            <div class="option-group">
                <label for="colors">Number of Colors (1-256):</label>
                <input type="number" id="colors" value="32" min="1" max="256">
            </div>
            <div class="option-group">
                <label for="turdsize">Turdsize (small path removal, 0-100):</label>
                <input type="number" id="turdsize" value="2" min="0" max="100">
            </div>
            <div class="option-group">
                <label for="alphamax">Alphamax (edge smoothness, 0-1.33):</label>
                <input type="number" id="alphamax" value="1.0" min="0" max="1.33" step="0.01">
            </div>
            <div class="option-group">
                <label for="opttolerance">Opttolerance (curve optimization, 0-2):</label>
                <input type="number" id="opttolerance" value="0.2" min="0" max="2" step="0.01">
            </div>
            <div class="option-group">
                <label for="resize">Resize Factor (0.1-10, e.g., 0.5 for half size):</label>
                <input type="number" id="resize" value="1" min="0.1" max="10" step="0.1">
            </div>
            <div class="option-group">
                <label for="posterize">Posterize Levels (0 to disable, 2-256):</label>
                <input type="number" id="posterize" value="0" min="0" max="256">
            </div>
            <div class="option-group">
                <label for="kmeans">K-Means Colors (0 to disable, 2-256):</label>
                <input type="number" id="kmeans" value="0" min="0" max="256">
            </div>
            <div class="option-group">
                <label><input type="checkbox" id="blur"> Enable Blur</label>
                <input type="number" id="blurScale" value="2" min="0.1" max="10" step="0.1" disabled>
            </div>
            <div class="option-group">
                <label><input type="checkbox" id="noiseRemoval"> Enable Noise Removal (Gaussian Blur)</label>
            </div>
            <div class="option-group">
                <label><input type="checkbox" id="edgeBlur"> Enable Edge-Preserving Blur</label>
            </div>
            <div class="option-group">
                <label><input type="checkbox" id="dilate"> Enable Dilation</label>
            </div>
            <div class="option-group">
                <label><input type="checkbox" id="alpha"> Enable Alpha Channel Processing</label>
            </div>
            <div class="option-group">
                <label><input type="checkbox" id="debug"> Enable Debug Mode (Saves intermediate images)</label>
            </div>
            <button id="convertButton">Convert to SVG</button>
            <button id="downloadButton" disabled>Download SVG</button>
            <div id="status"></div>
        </div>
        <div class="preview">
            <h2>Image Preview</h2>
            <canvas id="previewCanvas"></canvas>
            <h2>SVG Output</h2>
            <div id="svgOutput"></div>
        </div>
    </div>

    <script type="module">
        // Import the Emscripten module
        import * as ModuleFactory from './img2vec.js';

        let Module;
        async function initModule() {
            try {
                console.log('ModuleFactory:', ModuleFactory);
                // Handle different export formats
                if (typeof ModuleFactory === 'function') {
                    Module = await ModuleFactory({ noInitialRun: true }); // Prevent _main from running
                } else if (typeof ModuleFactory.default === 'function') {
                    Module = await ModuleFactory.default({ noInitialRun: true });
                } else if (typeof ModuleFactory.createModule === 'function') {
                    Module = await ModuleFactory.createModule({ noInitialRun: true });
                } else {
                    throw new Error('No valid module factory function found in img2vec.js');
                }
                window.Module = Module;
                console.log('Initialized Module:', Module);
                //document.getElementById('convertBtn').disabled = false;
                console.log('WebAssembly module loaded successfully');
            } catch (err) {
                console.error('Failed to initialize WebAssembly module:', err);
                alert('Failed to load WebAssembly module. Check console for details.');
            }
        }
        initModule();

        const imageInput = document.getElementById('imageInput');
        const previewCanvas = document.getElementById('previewCanvas');
        const svgOutput = document.getElementById('svgOutput');
        const convertButton = document.getElementById('convertButton');
        const downloadButton = document.getElementById('downloadButton');
        const status = document.getElementById('status');
        const blurCheckbox = document.getElementById('blur');
        const blurScaleInput = document.getElementById('blurScale');

        blurCheckbox.addEventListener('change', () => {
            blurScaleInput.disabled = !blurCheckbox.checked;
        });

        imageInput.addEventListener('change', (event) => {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const img = new Image();
                    img.onload = () => {
                        previewCanvas.width = img.width;
                        previewCanvas.height = img.height;
                        const ctx = previewCanvas.getContext('2d');
                        ctx.drawImage(img, 0, 0);
                    };
                    img.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        convertButton.addEventListener('click', () => {
            const file = imageInput.files[0];
            if (!file) {
                status.textContent = 'Please select an image.';
                return;
            }

            status.textContent = 'Processing...';
            const reader = new FileReader();
            reader.onload = (e) => {
                const arrayBuffer = e.target.result;
                const uint8Array = new Uint8Array(arrayBuffer);

                // Allocate memory in Emscripten
                const dataSize = uint8Array.length;
                const dataPtr = Module._malloc(dataSize);
                Module.HEAPU8.set(uint8Array, dataPtr);

                // Get options
                const colors = parseInt(document.getElementById('colors').value) || 32;
                const turdsize = parseInt(document.getElementById('turdsize').value) || 2;
                const alphamax = parseFloat(document.getElementById('alphamax').value) || 1.0;
                const opttolerance = parseFloat(document.getElementById('opttolerance').value) || 0.2;
                const resize = parseFloat(document.getElementById('resize').value) || 1.0;
                const posterize = parseInt(document.getElementById('posterize').value) || 0;
                const kmeans = parseInt(document.getElementById('kmeans').value) || 0;
                const blur = document.getElementById('blur').checked ? 8 : 0;
                const noiseRemoval = document.getElementById('noiseRemoval').checked ? 1 : 0;
                const edgeBlur = document.getElementById('edgeBlur').checked ? 1 : 0;
                const dilate = document.getElementById('dilate').checked ? 2 : 0;
                const alpha = document.getElementById('alpha').checked ? 4 : 0;
                const debug = document.getElementById('debug').checked ? 1 : 0;

                // Set flags (combine all flags as in C code)
                const flag = 32 | blur | dilate | alpha | debug; // 32 for SVG output

                // Write options to Emscripten FS (emulate command-line args)
                Module.FS.writeFile('/options.txt', JSON.stringify({
                    colors,
                    turdsize,
                    alphamax,
                    opttolerance,
                    resize,
                    posterize,
                    kmeans,
                    noise_removal: noiseRemoval,
                    edge_blur: edgeBlur,
                    flag
                }));

                // Call process_image
                const result = Module.ccall(
                    'process_image',
                    'number',
                    ['number', 'number', 'number', 'number', 'number', 'number'],
                    [dataPtr, dataSize, colors, turdsize, alphamax, opttolerance]
                );

                Module._free(dataPtr);

                if (result === 0) {
                    try {
                        const svgData = Module.FS.readFile('/output.svg', { encoding: 'utf8' });
                        svgOutput.innerHTML = svgData;
                        downloadButton.disabled = false;
                        status.textContent = 'Conversion successful!';
                    } catch (e) {
                        status.textContent = 'Error reading SVG output: ' + e.message;
                    }
                } else if (result === -1) {
                    status.textContent = 'Error loading image.';
                } else if (result === -2) {
                    status.textContent = 'Image too large.';
                } else {
                    status.textContent = 'Conversion failed with error code: ' + result;
                }
            };
            reader.readAsArrayBuffer(file);
        });

        downloadButton.addEventListener('click', () => {
            const svgData = svgOutput.innerHTML;
            if (svgData) {
                const blob = new Blob([svgData], { type: 'image/svg+xml' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = 'output.svg';
                a.click();
                URL.revokeObjectURL(url);
            }
        });
    </script>
</body>
</html>
